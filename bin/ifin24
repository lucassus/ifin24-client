#!/usr/bin/env ruby
# encoding: utf-8

require 'rubygems'
require 'bundler'
Bundler.setup

require 'yaml'
require 'mechanize'
require 'highline/import'

require 'lib/ifin24'

def main
  config = Ifin24::Configuration.instance
  client = Ifin24::Client.new(config[:login], config[:password])
  console = Ifin24::Console.new(client)
  console.main_menu
end

main
